{
  "name": "fancy-component-showcase",
  "description": "Just some fancy components I've build or stolen from codepen and converted to be a react typescript component with extreme flexibility in the form of props so you can use them in your own projects.",
  "url": "https://components.remcostoeten.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/fancy-component-showcase"
  },
  "author": {
    "name": "Remco Stoeten",
    "personalSite": "https://remcostoeten.com",
    "github": "https://github.com/remcostoeten",
    "linkedin": "https://www.linkedin.com/in/remcostoeten/"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev-regular": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "typecheck": "tsc --noEmit --pretty",
    "commit": "git add * ; cz",
    "push": "git add * ; cz ;git push"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.2.1",
    "sonner": "^1.4.41"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "@commitlint/cz-commitlint": "^19.2.0",
    "eslint-config-next": "14.2.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
